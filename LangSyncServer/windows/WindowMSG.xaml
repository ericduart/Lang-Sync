<Window x:Class="LangSyncServer.windows.WindowMSG"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        ResizeMode="NoResize"
        xmlns:local="clr-namespace:LangSyncServer.windows"
        mc:Ignorable="d"
        Height="250" Width="500"
        Icon="/assets/logo.png"
        Title="Message"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Label x:Name="lblMessage" Content="Message" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Margin="0,20,0,0" HorizontalContentAlignment="Center"/>


        <WrapPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,00,00,50">
            <Button Width="100" Height="100" Padding="10" HorizontalAlignment="Left" Click="Button_Click" Background="White">
                <Image Source="/assets/Tick.png" />
            </Button>
            <Button Width="100" Height="100" Padding="10" HorizontalAlignment="Left" Margin="20,0,0,0" Click="Button_Click_1" Background="White">
                <Image Source="/assets/Cross.png" />
            </Button>
        </WrapPanel>
        
        


    </Grid>
</Window>
