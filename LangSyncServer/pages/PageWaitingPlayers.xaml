<Page x:Class="LangSyncServer.pages.PageWaitingPlayers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LangSyncServer.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1"
      Background="White"
      Loaded="Page_Loaded"
      >

    <!-- Ajusta el tamaño del Grid para que se expanda automáticamente -->
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <!-- Contenido de la página aquí -->
        <Label x:Name="lblPartyCode" Content="Party Code..." HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" HorizontalContentAlignment="Right" />
        <Label x:Name="waitingplayers" Content="Players joined" Margin="50,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <WrapPanel x:Name="WrapPlayers" Width="{Binding ActualWidth}" Margin="50,60,50,60"/>
    </Grid>
</Page>
